<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlaceModificationPageActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/include"
        app:layout_constraintTop_toTopOf="parent">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/ModifyPlaceBoldText"
                    android:layout_width="262dp"
                    android:layout_height="56dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="50dp"
                    android:text="Modify your place in FakeBnB"
                    android:textSize="24sp"
                    android:gravity="center"
                    android:textStyle="bold"/>

                <!-- Address -->
                <TextView
                    android:id="@+id/modifyPlaceWarningAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="15dp"
                    android:paddingStart="20dp"
                    android:text="@string/warning"
                    android:textColor="@android:color/holo_red_light"
                    android:visibility="visible"
                    tools:ignore="RtlSymmetry" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingStart="20dp"
                    android:text="@string/address"
                    android:textSize="18sp"
                    tools:ignore="RtlSymmetry" />

                <EditText
                    android:id="@+id/modifyPlaceAddressEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:background="@drawable/edittext_border" />

                <!-- District -->
                <TextView
                    android:id="@+id/modifyPlaceWarningDistrict"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="15dp"
                    android:paddingStart="20dp"
                    android:text="@string/warning"
                    android:textColor="@android:color/holo_red_light"
                    android:visibility="visible"
                    tools:ignore="RtlSymmetry" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingStart="20dp"
                    android:text="@string/district"
                    android:textSize="18sp"
                    tools:ignore="RtlSymmetry" />

                <EditText
                    android:id="@+id/modifyPlaceDistrictEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:background="@drawable/edittext_border" />

                <!-- City -->
                <TextView
                    android:id="@+id/modifyPlaceWarningCity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="15dp"
                    android:paddingStart="20dp"
                    android:text="@string/warning"
                    android:textColor="@android:color/holo_red_light"
                    android:visibility="visible"
                    tools:ignore="RtlSymmetry" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingStart="20dp"
                    android:text="@string/city"
                    android:textSize="18sp"
                    tools:ignore="RtlSymmetry" />

                <EditText
                    android:id="@+id/modifyPlaceCityEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:background="@drawable/edittext_border" />

                <!-- Country -->
                <TextView
                    android:id="@+id/modifyPlaceWarningCountry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="15dp"
                    android:paddingStart="20dp"
                    android:text="@string/warning"
                    android:textColor="@android:color/holo_red_light"
                    android:visibility="visible"
                    tools:ignore="RtlSymmetry" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingStart="20dp"
                    android:text="@string/country"
                    android:textSize="18sp"
                    tools:ignore="RtlSymmetry" />

                <EditText
                    android:id="@+id/modifyPlaceCountryEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:background="@drawable/edittext_border" />

                <com.google.android.gms.maps.MapView
                    android:id="@+id/modifyPlaceMapView"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginEnd="20dp"/>

                <!-- Dates -->
                <TextView
                    android:id="@+id/modifyPlaceWarningDates"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="15dp"
                    android:paddingStart="20dp"
                    android:text="@string/warning"
                    android:textColor="@android:color/holo_red_light"
                    android:visibility="visible"
                    tools:ignore="RtlSymmetry" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingStart="20dp"
                    android:text="Dates"
                    android:textSize="18sp"
                    tools:ignore="RtlSymmetry" />

                <!--                <EditText-->
                <!--                    android:id="@+id/addPlaceDatesEditText"-->
                <!--                    android:layout_width="match_parent"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    android:layout_margin="20dp"-->
                <!--                    android:background="@drawable/edittext_border" />-->
                <!-- Check-in date -->
                <EditText
                    android:id="@+id/modifyStartDateEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="15dp"
                    android:padding="16dp"
                    android:drawablePadding="8dp"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:hint="Check-in date"/>

                <!-- Check-out date -->
                <EditText
                    android:id="@+id/modifyEndDateEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="15dp"
                    android:padding="16dp"
                    android:drawablePadding="8dp"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:hint="Check-out date" />

                <!-- Maximum visitors -->
                <TextView
                    android:id="@+id/modifyPlaceWarningMaxVisitors"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="15dp"
                    android:paddingStart="20dp"
                    android:text="@string/warning"
                    android:textColor="@android:color/holo_red_light"
                    android:visibility="visible"
                    tools:ignore="RtlSymmetry" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingStart="20dp"
                    android:text="Maximum visitors"
                    android:textSize="18sp"
                    tools:ignore="RtlSymmetry" />

                <EditText
                    android:id="@+id/modifyPlaceMaxVisitorsEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:background="@drawable/edittext_border"
                    android:ems="10"
                    android:inputType="number" />

                <!-- Minimum rental price -->
                <TextView
                    android:id="@+id/modifyPlaceWarningMinPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="15dp"
                    android:paddingStart="20dp"
                    android:text="@string/warning"
                    android:textColor="@android:color/holo_red_light"
                    android:visibility="visible"
                    tools:ignore="RtlSymmetry" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingStart="20dp"
                    android:text="Minimum rental price"
                    android:textSize="18sp"
                    tools:ignore="RtlSymmetry" />

                <EditText
                    android:id="@+id/modifyPlaceMinPriceEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:background="@drawable/edittext_border"
                    android:ems="10"
                    android:inputType="numberDecimal"/>

                <!-- Extra cost/person -->
                <TextView
                    android:id="@+id/modifyPlaceWarningExtraCost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="15dp"
                    android:paddingStart="20dp"
                    android:text="@string/warning"
                    android:textColor="@android:color/holo_red_light"
                    android:visibility="visible"
                    tools:ignore="RtlSymmetry" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingStart="20dp"
                    android:text="Extra cost per person"
                    android:textSize="18sp"
                    tools:ignore="RtlSymmetry" />

                <EditText
                    android:id="@+id/modifyPlaceExtraCostEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:background="@drawable/edittext_border"
                    android:ems="10"
                    android:inputType="numberDecimal" />

                <!-- Rental type -->
                <TextView
                    android:id="@+id/modifyPlaceWarningRentalType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="15dp"
                    android:paddingStart="20dp"
                    android:text="@string/warning"
                    android:textColor="@android:color/holo_red_light"
                    android:visibility="visible"
                    tools:ignore="RtlSymmetry" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingStart="20dp"
                    android:text="Rental type"
                    android:textSize="18sp"
                    tools:ignore="RtlSymmetry" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/modifyPlaceRentalTypeRadioGroup"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/roomTypeRadioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="10dp"
                        android:text="Room"
                        android:checked="true" />

                    <RadioButton
                        android:id="@+id/houseTypeRadioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="House" />

                </RadioGroup>

                <!-- Photo upload -->
                <TextView
                    android:id="@+id/modifyPlaceWarningPhotoUpload"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="15dp"
                    android:paddingStart="20dp"
                    android:text="@string/warning"
                    android:textColor="@android:color/holo_red_light"
                    android:visibility="visible"
                    tools:ignore="RtlSymmetry" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingStart="20dp"
                    android:text="Photos of rental"
                    android:textSize="18sp"
                    tools:ignore="RtlSymmetry" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/modifyImageRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_margin="10dp">

                    <Button
                        android:id="@+id/modifySelectImageButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add Image"/>
                </LinearLayout>

                <!-- Rules -->
                <TextView
                    android:id="@+id/modifyPlaceWarningRules"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="15dp"
                    android:paddingStart="20dp"
                    android:text="@string/warning"
                    android:textColor="@android:color/holo_red_light"
                    android:visibility="visible"
                    tools:ignore="RtlSymmetry" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingStart="20dp"
                    android:text="Rules"
                    android:textSize="18sp"
                    tools:ignore="RtlSymmetry" />

                <EditText
                    android:id="@+id/modifyPlaceRulesEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:background="@drawable/edittext_border" />

                <!-- Amenities -->
                <TextView
                    android:id="@+id/modifyPlaceWarningAmenities"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="15dp"
                    android:paddingStart="20dp"
                    android:text="@string/warning"
                    android:textColor="@android:color/holo_red_light"
                    android:visibility="visible"
                    tools:ignore="RtlSymmetry" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingStart="20dp"
                    android:text="@string/amenities"
                    android:textSize="18sp"
                    tools:ignore="RtlSymmetry" />

                <EditText
                    android:id="@+id/modifyPlaceAmenitiesEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:background="@drawable/edittext_border" />

                <!-- Description -->
                <TextView
                    android:id="@+id/modifyPlaceWarningDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="15dp"
                    android:paddingStart="20dp"
                    android:text="@string/warning"
                    android:textColor="@android:color/holo_red_light"
                    android:visibility="visible"
                    tools:ignore="RtlSymmetry" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingStart="20dp"
                    android:text="Description"
                    android:textSize="18sp"
                    tools:ignore="RtlSymmetry" />

                <EditText
                    android:id="@+id/modifyPlaceDescriptionEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:background="@drawable/edittext_border" />

                <!-- Beds -->
                <TextView
                    android:id="@+id/modifyPlaceWarningBeds"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="15dp"
                    android:paddingStart="20dp"
                    android:text="@string/warning"
                    android:textColor="@android:color/holo_red_light"
                    android:visibility="visible"
                    tools:ignore="RtlSymmetry" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingStart="20dp"
                    android:text="Beds"
                    android:textSize="18sp"
                    tools:ignore="RtlSymmetry" />

                <EditText
                    android:id="@+id/modifyPlaceBedsEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:background="@drawable/edittext_border"
                    android:ems="10"
                    android:inputType="number" />

                <!-- Bedrooms -->
                <TextView
                    android:id="@+id/modifyPlaceWarningBedrooms"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="15dp"
                    android:paddingStart="20dp"
                    android:text="@string/warning"
                    android:textColor="@android:color/holo_red_light"
                    android:visibility="visible"
                    tools:ignore="RtlSymmetry" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingStart="20dp"
                    android:text="Bedrooms"
                    android:textSize="18sp"
                    tools:ignore="RtlSymmetry" />

                <EditText
                    android:id="@+id/modifyPlaceBedroomsEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:background="@drawable/edittext_border"
                    android:ems="10"
                    android:inputType="number" />

                <!-- Bathrooms -->
                <TextView
                    android:id="@+id/modifyPlaceWarningBathrooms"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="15dp"
                    android:paddingStart="20dp"
                    android:text="@string/warning"
                    android:textColor="@android:color/holo_red_light"
                    android:visibility="visible"
                    tools:ignore="RtlSymmetry" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingStart="20dp"
                    android:text="Bathrooms"
                    android:textSize="18sp"
                    tools:ignore="RtlSymmetry" />

                <EditText
                    android:id="@+id/modifyPlaceBathroomsEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:background="@drawable/edittext_border"
                    android:ems="10"
                    android:inputType="number" />

                <!-- Living rooms -->
                <TextView
                    android:id="@+id/modifyPlaceWarningLivingRooms"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="15dp"
                    android:paddingStart="20dp"
                    android:text="@string/warning"
                    android:textColor="@android:color/holo_red_light"
                    android:visibility="visible"
                    tools:ignore="RtlSymmetry" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingStart="20dp"
                    android:text="Living rooms"
                    android:textSize="18sp"
                    tools:ignore="RtlSymmetry" />

                <EditText
                    android:id="@+id/modifyPlaceLivingRoomsEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:background="@drawable/edittext_border"
                    android:ems="10"
                    android:inputType="number" />

                <!-- Area -->
                <TextView
                    android:id="@+id/modifyPlaceWarningArea"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="15dp"
                    android:paddingStart="20dp"
                    android:text="@string/warning"
                    android:textColor="@android:color/holo_red_light"
                    android:visibility="visible"
                    tools:ignore="RtlSymmetry" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingStart="20dp"
                    android:text="Area"
                    android:textSize="18sp"
                    tools:ignore="RtlSymmetry" />

                <EditText
                    android:id="@+id/modifyPlaceAreaEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:background="@drawable/edittext_border"
                    android:ems="10"
                    android:inputType="number" />

                <!-- Buttons -->
                <Button
                    android:id="@+id/savePlaceChangesButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/save_changes"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/deletePlaceButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="20dp"
                    android:text="@string/delete_place" />

            </LinearLayout>

        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>


    <include
        android:id="@+id/include"
        layout="@layout/bottom_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>